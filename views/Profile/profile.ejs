<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HarvestLink - Profile</title>
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/views/Profile/profile.css">
  <link rel="icon" href="/assets/homepage/harvestlink logo.png" type="image/x-icon">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<body>
  <!-- Header Section -->
  <header>
    <nav class="navbar">
      <div class="nav-left">
        <h1>HARVESTLINK</h1>
      </div>
      <div class="nav-center">
        <div class="logo-circle">
          <img src="/assets/homepage/harvestlink logo.png" alt="HarvestLink Logo">
        </div>
      </div>
      <div class="nav-right">
        <div class="cart-icon" onclick="window.location.href='/cart'">
          <img src="/assets/shop/shopping-cart.png" alt="Shopping Cart" style="width: 24px; height: 24px;">
          <span class="cart-count"><%= cartCount || 0 %></span>
        </div>
        <div class="hamburger-menu">
          <div class="hamburger">
            <div class="line line1"></div>
            <div class="line line2"></div>
            <div class="line line3"></div>
          </div>
        </div>
      </div>
    </nav>
    <div class="nav-overlay">
      <button class="close-menu">Ã—</button>
      <div class="nav-logo">
        <img src="/assets/homepage/harvestlink logo full.png" alt="HarvestLink Logo">
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/shop" class="shop-link">Shop</a></li>
        <li><a href="/contacts">Contact</a></li>
        <% if (isAuthenticated) { %>
          <li><a href="/profile">Profile</a></li>
          <% if (user && user.role === 'admin') { %>
            <li><a href="/admin">Admin</a></li>
          <% } %>
          <li><a href="#" onclick="logout()">Logout</a></li>
        <% } else { %>
          <li><a href="/login">Login</a></li>
        <% } %>
      </ul>
    </div>
  </header>

  <main class="bb-learn-profile-main">
    <div class="bb-learn-profile-header">
      <div style="height: 3.5rem;"></div> <!-- Spacer to push profile lower below header -->
      <div class="bb-learn-profile-picture">
        <% if (user && user.profileImage) { %>
          <img src="<%= user.profileImage %>" alt="Profile Picture">
        <% } else { %>
          <img src="https://icons.iconarchive.com/icons/fa-team/fontawesome/512/FontAwesome-User-icon.png" alt="Default Profile Picture">
        <% } %>
      </div>
      <div class="bb-learn-profile-name"><%= (user && user.fullName) || (user && user.firstName ? (user.firstName + (user.lastName ? ' ' + user.lastName : '')) : 'Not provided') %></div>
      <div class="bb-learn-profile-username"><%= (user && user.email) || '' %></div>
    </div>
    <div class="bb-learn-profile-columns">
      <div class="bb-learn-profile-left">
        <div class="bb-learn-card">
          <div class="bb-learn-card-title">Basic Information
            <button class="bb-learn-edit-btn" onclick="showEditProfileModal()" style="float:right; background:#4CAF50; color:#fff; border:none; border-radius:0.3rem; padding:0.2rem 0.8rem; font-size:0.95rem; cursor:pointer;">Edit</button>
          </div>
          <table class="bb-learn-info-table">
            <tr><td>Full Name</td><td><%= (user && user.fullName) || (user && user.firstName ? (user.firstName + (user.lastName ? ' ' + user.lastName : '')) : 'Not provided') %></td></tr>
            <tr><td>Email Address</td><td><%= (user && user.email) || 'Not provided' %></td></tr>
            <tr><td>Phone</td><td><%= (user && user.phone) || 'Not provided' %></td></tr>
          </table>
        </div>
        <!-- Edit Profile Modal -->
        <div id="editProfileModal" class="modal">
          <div class="modal-content">
            <div class="modal-header">
              <h3>Edit Profile</h3>
              <span class="close-modal" onclick="closeEditProfileModal()">&times;</span>
            </div>
            <div class="modal-body">
              <form id="editProfileForm">
                <div class="form-group">
                  <label for="editFirstName">First Name</label>
                  <input type="text" id="editFirstName" name="firstName" value="<%= user && user.firstName ? user.firstName : '' %>" required>
                </div>
                <div class="form-group">
                  <label for="editLastName">Last Name</label>
                  <input type="text" id="editLastName" name="lastName" value="<%= user && user.lastName ? user.lastName : '' %>" required>
                </div>
                <div class="form-group">
                  <label for="editEmail">Email Address</label>
                  <input type="email" id="editEmail" name="email" value="<%= user && user.email ? user.email : '' %>" required>
                </div>
                <div class="form-group">
                  <label for="editPhone">Phone</label>
                  <input type="tel" id="editPhone" name="phone" value="<%= user && user.phone ? user.phone : '' %>" required>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button class="btn-primary" onclick="saveProfileEdit()">Save Changes</button>
              <button class="btn-secondary" onclick="closeEditProfileModal()">Cancel</button>
            </div>
          </div>
        </div>
        <!-- My Addresses Card moved below Basic Information -->
        <div class="bb-learn-card">
          <div class="bb-learn-card-title">My Addresses</div>
          <div class="addresses-container" id="addressesContainer">
            <div class="loading-addresses">Loading your addresses...</div>
          </div>
          <button class="bb-learn-add-btn" onclick="showAddAddressModal()">Add New Address</button>
        </div>
        <!-- You can add more cards for additional info, contact info, etc. -->
      </div>
      <div class="bb-learn-profile-right">
        <div class="bb-learn-card">
          <div class="bb-learn-card-title">Transaction History</div>
          <table class="bb-learn-info-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Items</th>
                <th>Total</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(function(tx) { %>
                  <tr>
                    <td><%= tx.date %></td>
                    <td><%= tx.items %></td>
                    <td>â‚±<%= tx.total %></td>
                    <td><%= tx.status %></td>
                    <td>
                      <% if (tx.status === 'Pending') { %>
                        <button class="bb-learn-track-btn" onclick="trackOrder('<%= tx.date %>')">Track Order</button>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" style="text-align: center; padding: 2rem; color: #666; font-size: 1.1rem;">
                    <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
                      <div style="font-size: 2rem;">ðŸ“‹</div>
                      <div>
                        <strong>No Transaction History</strong><br>
                        You haven't made any purchases yet.<br>
                        <a href="/shop" style="color: #4CAF50; text-decoration: none; font-weight: bold;">Start shopping now!</a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script>
      function trackOrder(orderDate) {
        alert('Tracking information for order on ' + orderDate + ':\n\nStatus: In Transit\nExpected Delivery: 2025-06-18');
      }
      // Edit Profile Modal Functions
      function showEditProfileModal() {
        document.getElementById('editProfileModal').style.display = 'block';
      }
      function closeEditProfileModal() {
        document.getElementById('editProfileModal').style.display = 'none';
      }
      function saveProfileEdit() {
        const form = document.getElementById('editProfileForm');
        // You can add AJAX here to submit the form to the server
        // For now, just close the modal
        closeEditProfileModal();
        alert('Profile updated! (Demo only)');
      }
    </script>
  </main>

  <footer class="footer">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/assets/homepage/harvestlink logo.png" alt="HarvestLink Logo">
      </div>
      <div class="social-links">
        <a href="https://facebook.com/harvestlink" target="_blank">
          <img src="/assets/homepage/facebook.png" alt="Facebook">
        </a>
        <a href="https://instagram.com/harvestlink" target="_blank">
          <img src="/assets/homepage/instagram.png" alt="Instagram">
        </a>
      </div>
      <p>&copy; 2025 HarvestLink. All rights reserved.</p>
    </div>
  </footer>

  <!-- Add Address Modal -->
  <div id="addAddressModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Add New Address</h3>
        <span class="close-modal" onclick="closeAddressModal()">&times;</span>
      </div>
      <div class="modal-body">
        <form id="addAddressForm">
          <div class="form-group">
            <label for="addressType">Address Type</label>
            <select id="addressType" name="type" required>
              <option value="">Select type</option>
              <option value="Home">Home</option>
              <option value="Work">Work</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" name="fullName" required>
          </div>
          
          <div class="form-group">
            <label for="street">Street Address</label>
            <input type="text" id="street" name="street" placeholder="House/Unit number, Street" required>
          </div>

          <div class="form-group">
            <label for="barangay">Barangay</label>
            <input type="text" id="barangay" name="barangay" placeholder="Barangay" required>
          </div>
          
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" placeholder="City" required>
          </div>

          <div class="form-group">
            <label for="province">Province</label>
            <input type="text" id="province" name="province" placeholder="Province" required>
          </div>
          
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="+63 912 345 6789" required>
          </div>

          <div class="form-group">
            <label for="postalCode">Postal Code (Optional)</label>
            <input type="text" id="postalCode" name="postalCode" placeholder="1234">
          </div>

          <div class="form-group">
            <label for="landmark">Landmark (Optional)</label>
            <input type="text" id="landmark" name="landmark" placeholder="Near mall, church, etc.">
          </div>

          <div class="form-group">
            <label for="deliveryInstructions">Delivery Instructions (Optional)</label>
            <textarea id="deliveryInstructions" name="deliveryInstructions" placeholder="Special delivery instructions..."></textarea>
          </div>
          
          <div class="form-group checkbox-group">
            <label>
              <input type="checkbox" id="isPrimary" name="isPrimary">
              Set as primary address
            </label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn-primary" onclick="saveAddress()">Save Address</button>
        <button class="btn-secondary" onclick="closeAddressModal()">Cancel</button>
      </div>
    </div>
  </div>

  <script src="/assets/js/config.js"></script>
  <script src="/assets/js/auth.js"></script>
  <script src="/views/Profile/profile.js"></script>
  <script>
    // Hamburger menu functionality (same as home page)
    document.addEventListener('DOMContentLoaded', function() {
      const hamburger = document.querySelector('.hamburger-menu');
      const navOverlay = document.querySelector('.nav-overlay');
      const closeMenuBtn = document.querySelector('.close-menu');
      const navbar = document.querySelector('.navbar');
      if (hamburger && navOverlay && closeMenuBtn && navbar) {
        hamburger.addEventListener('click', function() {
          navOverlay.classList.add('active');
          navbar.style.display = 'none';
        });
        closeMenuBtn.addEventListener('click', function() {
          navOverlay.classList.remove('active');
          navbar.style.display = '';
        });
        navOverlay.addEventListener('click', function(e) {
          if (e.target === navOverlay) {
            navOverlay.classList.remove('active');
            navbar.style.display = '';
          }
        });
        // Also close overlay and show navbar when clicking any nav link
        navOverlay.querySelectorAll('.nav-links a').forEach(link => {
          link.addEventListener('click', function() {
            navOverlay.classList.remove('active');
            navbar.style.display = '';
          });
        });
      }
    });
  </script>
  <style>
    .bb-learn-profile-main {
      max-width: 1200px;
      margin: 4.5rem auto 0 auto; /* Increased top margin to clear header */
      padding: 0 1.5rem 2rem 1.5rem;
      background: #f7f7f7;
      min-height: 80vh;
      position: relative;
      z-index: 1;
    }
    .bb-learn-profile-header {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 2.5rem;
      position: relative;
      z-index: 2;
    }
    .bb-learn-profile-picture {
      width: 110px;
      height: 110px;
      border-radius: 50%;
      overflow: hidden;
      border: 3px solid #4CAF50;
      background: #fff;
      margin-bottom: 1.2rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .bb-learn-profile-picture img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .bb-learn-profile-name {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 0.2rem;
      color: #23272e;
      font-family: 'DM Serif Text', serif;
    }
    .bb-learn-profile-username {
      color: #666;
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }
    .bb-learn-profile-columns {
      display: flex;
      gap: 2.5rem;
      justify-content: center;
    }
    .bb-learn-profile-left, .bb-learn-profile-right {
      flex: 1 1 0;
      min-width: 320px;
      max-width: 520px;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    .bb-learn-card {
      background: #fff;
      border: 1px solid #d3d3d3;
      border-radius: 0.5rem;
      box-shadow: 0 1px 4px rgba(0,0,0,0.03);
      padding: 1.2rem 1.5rem 1.5rem 1.5rem;
    }
    .bb-learn-card-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #23272e;
      margin-bottom: 1rem;
    }
    .bb-learn-info-table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
    }
    .bb-learn-info-table th, .bb-learn-info-table td {
      border-bottom: 1px solid #e0e0e0;
      padding: 0.7rem 0.5rem;
      text-align: left;
      font-size: 1rem;
    }
    .bb-learn-info-table th {
      background: #f5f5f5;
      font-weight: 600;
      color: #333;
    }
    .bb-learn-info-table tr:last-child td {
      border-bottom: none;
    }
    .bb-learn-add-btn {
      background: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 0.4rem;
      padding: 0.4rem 1.2rem;
      font-size: 1rem;
      cursor: pointer;
      margin-top: 1rem;
      transition: background 0.2s;
    }
    .bb-learn-add-btn:hover {
      background: #388e3c;
    }
    .bb-learn-track-btn {
      background: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 0.4rem;
      padding: 0.3rem 1rem;
      font-size: 0.98rem;
      cursor: pointer;
      transition: background 0.2s;
    }
    .bb-learn-track-btn:hover {
      background: #388e3c;
    }
    .bb-learn-edit-btn {
      margin-left: 1rem;
      background: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 0.3rem;
      padding: 0.2rem 0.8rem;
      font-size: 0.95rem;
      cursor: pointer;
      transition: background 0.2s;
    }
    .bb-learn-edit-btn:hover {
      background: #388e3c;
    }
    /* Modal styles (reuse from Add Address Modal) */
    .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background: rgba(0,0,0,0.3); }
    .modal-content { background: #fff; margin: 5% auto; border-radius: 0.5rem; padding: 1.5rem; width: 95%; max-width: 420px; position: relative; }
    .modal-header { display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #eee; margin-bottom: 1rem; }
    .close-modal { font-size: 1.7rem; cursor: pointer; color: #888; }
    .form-group { margin-bottom: 1.1rem; }
    .form-group label { display: block; margin-bottom: 0.3rem; color: #333; font-weight: 500; }
    .form-group input { width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 0.3rem; font-size: 1rem; }
    .modal-footer { display: flex; justify-content: flex-end; gap: 0.7rem; margin-top: 1.2rem; }
    .btn-primary { background: #4CAF50; color: #fff; border: none; border-radius: 0.3rem; padding: 0.4rem 1.2rem; font-size: 1rem; cursor: pointer; }
    .btn-primary:hover { background: #388e3c; }
    .btn-secondary { background: #eee; color: #333; border: none; border-radius: 0.3rem; padding: 0.4rem 1.2rem; font-size: 1rem; cursor: pointer; }
    .btn-secondary:hover { background: #ccc; }
    @media (max-width: 900px) {
      .bb-learn-profile-main {
        margin-top: 4.5rem;
      }
      .bb-learn-profile-columns {
        flex-direction: column;
        gap: 1.5rem;
      }
      .bb-learn-profile-left, .bb-learn-profile-right {
        max-width: 100%;
      }
    }
    @media (max-width: 600px) {
      .bb-learn-profile-main {
        padding: 0 0.2rem;
      }
      .bb-learn-card {
        padding: 0.7rem 0.3rem 1rem 0.3rem;
      }
    }
  </style>
</body>
</html>
