<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/backup_html/Shop webpage/shop.css">
    <link rel="stylesheet" href="/assets/css/auth-styles.css">
    <script src="/assets/js/config.js"></script>
    <script src="/assets/js/auth.js"></script>
    <script src="/views/Shop/shop.js" defer></script>
    <link rel="icon" href="/assets/homepage/harvestlink logo.png" type="image/x-icon">
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar">
            <div class="nav-left">
                <h1>HARVESTLINK</h1>
            </div>
            <div class="nav-center">
                <div class="logo-circle">
                    <img src="/assets/homepage/harvestlink logo.png" alt="HarvestLink Logo">
                </div>
            </div>            <div class="nav-right">
                <div class="cart-icon" onclick="window.location.href='/cart'">
                    <img src="/assets/shop/shopping-cart.png" alt="Shopping Cart" style="width: 24px; height: 24px;">
                    <span class="cart-count">0</span>
                </div>
                <div class="hamburger-menu">
                    <div class="hamburger">
                        <div class="line line1"></div>
                        <div class="line line2"></div>
                        <div class="line line3"></div>
                    </div>
                </div>
            </div>
        </nav>        
        <div class="nav-overlay">
            <button class="close-menu">Ã—</button>
            <div class="nav-logo">
                <img src="/assets/homepage/harvestlink logo full.png" alt="HarvestLink Logo">
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop" class="shop-link">Shop</a></li>
                <li><a href="/contacts">Contact</a></li>
                <% if (isAuthenticated) { %>
                    <% if (user && user.role === 'admin') { %>
                        <li><a href="/admin">Admin</a></li>
                    <% } %>
                    <li><a href="#" onclick="logout()">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                <% } %>
            </ul>
        </div>    
    </header>

    <!-- Main Content -->
    <main class="shop-main">
        <!-- Shop Hero Section -->
        <section class="shop-hero">
            <h1>Our Products</h1>
            <p>Fresh from local farmers to your table</p>
        </section>
        
        <!-- Products Section -->
        <section class="products-section">
            <div class="product-grid">
                <!-- Products will be loaded dynamically from database -->
            </div>
        </section>

        <!-- Product Detail Overlay -->
        <div class="product-detail-overlay">
            <div class="product-detail-content">
                <button class="back-button">&larr; Back to Shop</button>
                <div class="product-detail-grid">
                    <div class="product-detail-image">
                        <img src="" alt="" class="detail-image">
                    </div>
                    <div class="product-detail-info">
                        <h2 class="detail-name"></h2>
                        <p class="detail-price"></p>
                        <p class="detail-stock"></p>
                        <div class="detail-description">
                            <h3>Product Details:</h3>
                            <ul>
                                <li>Freshly harvested from local farmers</li>
                                <li>Carefully selected for quality</li>
                                <li>Direct from farm to your table</li>
                            </ul>
                        </div>
                        <div class="detail-quantity">
                            <label for="quantity">Quantity:</label>
                            <div class="quantity-controls">
                                <button class="quantity-btn minus">-</button>
                                <input type="number" id="quantity" value="1" min="1">
                                <button class="quantity-btn plus">+</button>
                            </div>
                        </div>
                        <button class="detail-add-to-cart"></button>
                    </div>                </div>
            </div>
        </div>
    </main>

</body>
</html>
